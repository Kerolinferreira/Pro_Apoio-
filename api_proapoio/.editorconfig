# Define que este é o arquivo principal
root = true

# Padrão geral para todos os arquivos
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# Arquivos PHP
[*.php]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Arquivos HTML, CSS e JS
[*.{html,htm,css,js}]
indent_style = space
indent_size = 2

# Arquivos JSON, YAML e de configuração
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# Arquivos Markdown
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

# Arquivos de shell
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf
